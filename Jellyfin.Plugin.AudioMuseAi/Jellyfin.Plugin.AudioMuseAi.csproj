<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <RootNamespace>Jellyfin.Plugin.AudioMuseAi</RootNamespace>
    <AssemblyName>Jellyfin.Plugin.AudioMuseAi</AssemblyName>
    
    <!-- 
      This is the placeholder tag the workflow needs.
      It will be automatically replaced with the git tag number during the build.
    -->
    <Version>0.0.0.0</Version>

    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    <Nullable>enable</Nullable>
    <AnalysisMode>AllEnabledByDefault</AnalysisMode>
    <CodeAnalysisRuleSet>../jellyfin.ruleset</CodeAnalysisRuleSet>
  </PropertyGroup>

  <ItemGroup>
    <!-- 
      This single package reference replaces the old ones.
      It includes everything needed for plugin development, including IHasThumbImage.
    -->
    <PackageReference Include="Jellyfin.PluginSdk" Version="10.9.0-beta.5" />
    
    <!-- Dependency-injection & HttpClientFactory -->
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="8.0.1" />
    <PackageReference Include="Microsoft.Extensions.Http" Version="8.0.1" />
  </ItemGroup>

  <ItemGroup>
    <!-- Analyzers (no runtime impact) -->
    <PackageReference Include="SerilogAnalyzer" Version="0.15.0" PrivateAssets="All" />
    <PackageReference Include="StyleCop.Analyzers" Version="1.2.0-beta.556" PrivateAssets="All" />
    <PackageReference Include="SmartAnalyzers.MultithreadingAnalyzer" Version="1.1.31" PrivateAssets="All" />
  </ItemGroup>

  <ItemGroup>
    <!-- This section now correctly embeds both your config page and the image. -->
    <None Remove="Configuration\configPage.html" />
    <EmbeddedResource Include="Configuration\configPage.html" />
    <EmbeddedResource Include="audiomuseai.png" />
  </ItemGroup>

</Project>
